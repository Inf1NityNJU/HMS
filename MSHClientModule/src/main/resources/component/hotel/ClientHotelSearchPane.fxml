            <SelectPane fx:id="placeSelect" labelWidth="141.0" text="商圈" AnchorPane.leftAnchor="140.0">
               <labels>
                  <Label text="仙林" />
                  <Label text="新街口" />
                  <Label text="汤山" />
                  <Label text="江宁" />
               </labels>
            </SelectPane>
         </children>
      </AnchorPane>
